minus.Position = UDim2.new(0.1,0,0.15,0)
minus.Text = "-"
minus.Font = Enum.Font.GothamBold
minus.TextSize = 28
minus.TextColor3 = Color3.fromRGB(255,255,255)
minus.BackgroundColor3 = Color3.fromRGB(40,40,40)
minus.Parent = movementTab
